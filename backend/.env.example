# Application
APP_NAME=TalentScout
ENV=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/talentscout
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Google Gemini AI 2.0 (FREE! - Latest Model)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chromadb
CHROMA_COLLECTION_NAME=talentscout_conversations

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@talentscout.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Vector Database
VECTOR_DB_TYPE=chromadb  # chromadb, pinecone, qdrant

# Celery (optional, for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
